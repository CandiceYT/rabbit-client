<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DevToolsActivity">

    <com.susion.devtools.base.view.DevToolsActionBar
        android:id="@+id/mDevToolsActionBar"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingStart="10dp">

        <ImageView
            android:id="@+id/http_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/devtools_icon_http" />

        <TextView
            android:id="@+id/mDevToolsTvHttpLog"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/http_icon"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:maxLines="10"
            android:paddingLeft="20dp"
            android:text="网络日志"
            android:textColor="@color/devtools_black"
            android:textSize="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/http_icon"
            android:background="@color/devtools_divider_line" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingStart="10dp">

        <ImageView
            android:id="@+id/expection_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/devtools_icon_exception_face" />

        <TextView
            android:id="@+id/mDevToolsTvException"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/expection_icon"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:maxLines="10"
            android:paddingLeft="20dp"
            android:text="异常日志"
            android:textColor="@color/devtools_black"
            android:textSize="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/expection_icon"
            android:background="@color/devtools_divider_line" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingStart="10dp">

        <ImageView
            android:id="@+id/caton_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/devtools_icon_caton" />

        <TextView
            android:id="@+id/mDevToolsTvCatonCheck"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/caton_icon"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:maxLines="10"
            android:paddingLeft="20dp"
            android:text="卡顿检测"
            android:textColor="@color/devtools_black"
            android:textSize="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/caton_icon"
            android:background="@color/devtools_divider_line" />

    </RelativeLayout>


</LinearLayout>