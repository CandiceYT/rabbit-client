<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rabbit_white"
    android:orientation="vertical">

    <TextView
        android:layout_margin="10dp"
        android:textSize="16dp"
        android:padding="5dp"
        android:text="耗时概略"
        android:textStyle="bold"
        android:textColor="@color/rabbit_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/rabbit_divider_line"/>

    <LinearLayout
        android:layout_margin="10dp"
        android:background="@color/rabbit_light_green"
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="14dp"
                android:text="页面名称"
                android:textColor="@color/rabbit_black"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/mRabbitSpeedDetailTvPageName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="14dp"
                android:text="MainActivity"
                android:textColor="@color/rabbit_black"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="14dp"
                android:text="onCreate平均耗时"
                android:textColor="@color/rabbit_black"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/mRabbitSpeedDetailTvCreateTime"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="14dp"
                android:text="110ms"
                android:textColor="@color/rabbit_black"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="14dp"
                android:text="首次inflate平均耗时"
                android:textColor="@color/rabbit_black"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/mRabbitSpeedDetailTvInlateTime"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="14dp"
                android:text="110ms"
                android:textColor="@color/rabbit_black"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="14dp"
                android:text="完全渲染平均耗时"
                android:textColor="@color/rabbit_black"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/mRabbitSpeedDetailTvFullRenderTime"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="14dp"
                android:text="110ms"
                android:textColor="@color/rabbit_black"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_margin="10dp"
        android:textSize="16dp"
        android:padding="5dp"
        android:text="耗时曲线"
        android:textStyle="bold"
        android:textColor="@color/rabbit_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/rabbit_divider_line"/>

    <com.github.mikephil.charting.charts.LineChart
        android:layout_margin="10dp"
        android:id="@+id/mRabbitSpeedDetailChart"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>


</LinearLayout>